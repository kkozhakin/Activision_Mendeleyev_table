            </TextBlock.RenderTransform>
        </TextBlock>
        <TextBox x:Name="_A" Text="-1" FontSize="20" RenderTransformOrigin="0.5,0.5" VerticalAlignment="Top" HorizontalAlignment="Left" Height="30" Width="100">
